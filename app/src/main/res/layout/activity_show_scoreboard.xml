<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    android:padding="10dp">
    <!--TODO:    Done by Zuhaili and Shufang-->

    <Button
        android:id="@+id/btnShowAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show all Users" />


    <Button
        android:id="@+id/btnFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Only Show User with top high-scores" />

    <!--  TODO:  Mode Spinner-->
    <TextView
        android:id="@+id/tvMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select user by mode:"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spMode"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!--  TODO:  username Spinner-->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select user by username:"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!--    <Button-->
    <!--        android:id="@+id/btnHome"-->
    <!--        android:layout_width="50dp"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:layout_gravity="top|left"-->
    <!--        android:layout_margin="10dp"-->
    <!--        android:background="@drawable/ic_baseline_home_24"-->
    <!--        android:textSize="20sp"-->
    <!--        tools:ignore="RtlHardcoded" />-->


    <TableLayout
        android:layout_width="380dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#F686BD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Scoreboard"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:gravity="center_horizontal"-->
        <!--            android:text="Score Ranking"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="30dp" />-->

        <TableRow

            android:padding="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Username"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Score"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Mode"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Date Played"
                android:textColor="@color/white" />
        </TableRow>

        <ListView
            android:id="@+id/lvScoreBoardData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </TableLayout>

    <Button
        android:id="@+id/btnExcel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Convert Scoreboard data to Excel" />

</LinearLayout>