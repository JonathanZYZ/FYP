<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvScore_Intermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Score:"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />


        <TextView
            android:id="@+id/tvQuestionsNumber_Intermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="Q1"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.jsibbold.zoomage.ZoomageView
            android:id="@+id/ivQuestions_Intermediate"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/question1_intermediate"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoCenter="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_maxScale="8"
            app:zoomage_minScale="0.6"
            app:zoomage_restrictBounds="false"
            app:zoomage_translatable="true"
            app:zoomage_zoomable="true" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup_Intermediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobutton_solvent_intermediate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Solvent"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radiobutton_product_intermediate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Product"/>

        <RadioButton
            android:id="@+id/radiobutton_reaction_intermediate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reaction"
            android:textColor="@color/black" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radiogroup_MCQoption_intermediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobutton_option1_intermediate"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radiobutton_option2_intermediate"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radiobutton_option3_intermediate"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radiobutton_option4_intermediate"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:textColor="@color/black" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStart_intermediate"
            android:layout_width="156dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Start"
            app:backgroundTint="#F686BD"
            app:cornerRadius="59dp" />
    </LinearLayout>
</LinearLayout>